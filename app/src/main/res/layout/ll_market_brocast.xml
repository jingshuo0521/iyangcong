<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_text_ad"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_50"
    android:padding="@dimen/space_5"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_text_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_13"
        android:layout_marginBottom="@dimen/space_2"
        android:layout_marginRight="@dimen/space_10"
        android:src="@drawable/ic_book_market_brocast" />

    <TextView
        android:id="@+id/tv_title_text_ad"
        style="@style/text_middle_large"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:text="@string/brocast_tittle"
        android:textColor="@color/text_color"
        android:visibility="gone"
        android:textStyle="bold" />

    <View
        android:layout_width="@dimen/space_0.5"
        android:layout_height="@dimen/space_20"
        android:layout_marginRight="@dimen/space_15"
        android:background="@color/lightgray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.iyangcong.reader.ui.textview.MarqueeView
            android:id="@+id/tv_text_ad"
            style="@style/text_middle"
            android:layout_marginRight="@dimen/space_5"
            android:background="@color/white"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="《鲍勃.迪伦传》2016年诺贝尔文学奖得主首次来华"
            app:mvAnimDuration="1000"
            app:mvTextSize="@dimen/text_size_14"
            app:mvTextColor="@color/text_color"
            app:mvInterval="3000" />

