<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schesmas.android.com/apk/res-auto"
    android:id="@+id/layout_item_circle_book"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_15"
    android:layout_marginRight="@dimen/space_15"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_book_image"
        android:layout_width="65dip"
        android:layout_height="86dip"
        app:cardElevation="@dimen/space_5">

        <ImageView
            android:id="@+id/iv_book_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
           />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_book_name"
        style="@style/text_middle"
        android:layout_width="65dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_book_image"
        android:layout_marginTop="@dimen/space_8"
        android:ellipsize="end"
        android:maxEms="7"
        android:gravity="left|top"
        android:maxLines="2"
        android:singleLine="false"
        android:text="小王子"/>

</RelativeLayout>