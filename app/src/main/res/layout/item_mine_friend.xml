<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_75"
        android:id="@+id/rl_friend"
        >
        <ImageView
            android:id="@+id/iv_friend_head"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginBottom="@dimen/space_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_head_default"
            />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:gravity="center_vertical"
           android:layout_toLeftOf="@+id/ll_care"
           android:layout_toRightOf="@+id/iv_friend_head">
           <TextView
               android:id="@+id/tv_friend_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="QQ"
               android:layout_marginBottom="@dimen/space_7"
               style="@style/text_large"/>
           <TextView
               android:id="@+id/tv_friend_desc"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="left"
               android:lines="1"
               android:ellipsize="end"
               android:text="1313"
               style="@style/text_middle"/>
       </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_care"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:paddingRight="@dimen/space_15"
            android:paddingLeft="@dimen/space_15"
            android:gravity="center_vertical|center_horizontal">
            <ImageView
                android:id="@+id/iv_icon_care"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/space_5"/>
            <TextView
                android:id="@+id/tv_care"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                style="@style/text_small"
                />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_0.5"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:background="@drawable/line_divide"/>


</LinearLayout>