<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_login_background" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_70"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/devide_line_2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/line_divide" />

            <TextView
                style="@style/text_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_8"
                android:text="@string/other_login_method"
                android:textColor="@color/dark" />

            <ImageView
                android:layout_width="@dimen/devide_line_2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_8"
                android:src="@drawable/line_divide" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/devide_line_1"
            android:layout_height="@dimen/space_50"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_25"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/btn_weibo" />

            <ImageView
                android:id="@+id/qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/btn_qq" />

            <ImageView
                android:id="@+id/wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/btn_wechat" />

            <ImageView
                android:id="@+id/douban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/btn_douban" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_25"
            android:orientation="horizontal">

            <TextView
                style="@style/text_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/readandagree"
                android:textColor="@color/dark" />

            <TextView
                android:id="@+id/tv_Agreement"
                style="@style/text_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_agree"
                android:textColor="@color/main_color"

                />

            <TextView
                android:id="@+id/tv_policy"
                style="@style/text_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_policy"
                android:textColor="@color/main_color"

                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_50"
            android:src="@drawable/logo_login" />

        <LinearLayout
            android:id="@+id/userId_LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_45"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_30">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_15"
                android:src="@drawable/ic_phone" />

            <EditText
                android:id="@+id/login_account"
                android:layout_width="230dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_20"
                android:background="@null"
                android:ellipsize="middle"
                android:singleLine="true"
                android:hint="请输入账号"
                android:textColorHint="@color/gray"
                android:textColor="@color/dark" />

            <ImageView
                android:id="@+id/login_more_user"
                android:layout_width="@dimen/space_20"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/space_5"
                android:src="@drawable/login_more_up" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/devide_line_1"
            android:layout_height="@dimen/space_0.5"
            android:layout_gravity="center"
            android:background="@color/main_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_45"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_15">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_15"
                android:src="@drawable/ic_lock" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="250dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_20"
                android:background="@null"
                android:ellipsize="middle"
                android:singleLine="true"
                android:inputType="textPassword"
                android:hint="请输入密码"
                android:textColorHint="@color/gray"
                android:textColor="@color/dark" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/devide_line_1"
            android:layout_height="@dimen/space_0.5"
            android:layout_gravity="center"
            android:background="@color/main_color" />

        <com.iyangcong.reader.ui.button.FlatButton
            android:id="@+id/login_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/main_button_width"
            android:layout_height="@dimen/space_40"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_18"
            android:text="@string/login"
            android:textColor="@color/white"
            app:cub_riple_effect="false"
            app:shadowEnabled="false"
            app:shadowHeight="@dimen/space_0" />

        <LinearLayout
            android:layout_width="@dimen/login_page"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_10">

            <TextView
                android:id="@+id/forget_password"
                style="@style/text_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/forgot_key"
                android:textColor="@color/dark" />

            <TextView
                android:id="@+id/register_now"
                style="@style/text_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableBottom="@drawable/line_under"
                android:gravity="center"
                android:text="@string/now_register"
                android:textColor="@color/main_color" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>