<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_invite_friend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp">
    <ImageView
        android:id="@+id/invite_friends_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_10"
        android:background="@drawable/ic_head_default"/>
        <TextView
            android:id="@+id/invite_friends_tv"
            android:layout_toRightOf="@id/invite_friends_iv"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginTop="@dimen/space_15"
            style="@style/text_middle_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小麦"/>
        <TextView
            android:id="@+id/tv_friends_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/invite_friends_tv"
            android:layout_alignLeft="@id/invite_friends_tv"
            android:layout_toLeftOf="@+id/cb_invite_friend"
            android:layout_marginRight="@dimen/space_5"
            android:layout_marginTop="@dimen/space_8"
            android:lines="1"
            android:ellipsize="end"
            android:text="千里之行始于足下千里之行始于足下千里之行始于足下千里之行始于足下千里之行始于足下千里之行始于足下"/>
        <CheckBox
            android:id="@+id/cb_invite_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/space_23"
            android:button="@null"
            android:layout_marginRight="@dimen/space_20"
            android:background="@drawable/selector_mine_shopping_cb"/>
    </RelativeLayout>
    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_0.5"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:background="@drawable/line_divide"/>

</LinearLayout>
