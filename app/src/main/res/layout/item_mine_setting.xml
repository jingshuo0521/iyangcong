<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <ImageView
        android:id="@+id/mine_setting_bind_im"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10"
        />
    <TextView
        android:id="@+id/mine_setting_bind_tv1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_toRightOf="@id/mine_setting_bind_im"
        android:layout_marginTop="@dimen/space_5"
        android:text="QQ"
        style="@style/text_large"/>
    <TextView
        android:id="@+id/mine_setting_bind_tv2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginTop="@dimen/space_5"
        android:layout_toRightOf="@id/mine_setting_bind_tv1"
        android:text=""
        style="@style/text_middle"/>
    <com.iyangcong.reader.ui.button.FlatButton
        android:id="@+id/mine_setting_bind_btn"
        android:layout_width="@dimen/space_70"
        android:layout_height="@dimen/space_30"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        app:shadowEnabled="false"
        />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_0.5"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:background="@drawable/line_divide"/>


</LinearLayout>
