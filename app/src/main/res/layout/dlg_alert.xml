<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alertdlg_bg">
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/dlg_title"
        android:textSize="@dimen/text_size_20"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:id="@+id/dlg_tv_title"/>
    
    <ImageView 
        android:id="@+id/im_diliver"
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dlg_tv_title"
        android:src="@drawable/alertdlg_diviler"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/im_diliver"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:textColor="@color/dlg_text"
        android:textSize="@dimen/text_size_16"
        android:gravity="center_vertical"
        android:layout_above="@+id/layout_btn"
        android:id="@+id/dlg_tv_message"/>
    
    
    <LinearLayout 
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/dlg_btn_postive"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="@drawable/alertdlg_btn_selecter"
            android:layout_height="45dip"
            android:textColor="@color/dlg_text"
            android:textSize="@dimen/text_size_16"/>
        
       <Button 
            android:id="@+id/dlg_btn_ne"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/dlg_text"
            android:background="@drawable/alertdlg_btn_cancel_selecter"
            android:layout_height="45dip"/>
        
    </LinearLayout>

</RelativeLayout>