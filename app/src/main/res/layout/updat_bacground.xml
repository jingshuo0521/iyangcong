<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:background="@drawable/updatbacground"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginLeft="@dimen/space_20"
       >

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="140dp"
            android:text="阿里嘎多"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/space_20" />

        <TextView
            android:id="@+id/update_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_25"
            android:layout_marginRight="@dimen/space_25"
            android:layout_below="@+id/version"
            android:layout_marginTop="@dimen/space_60"
            android:textStyle="bold"
            android:textSize="@dimen/space_16"
            android:textColor="@color/black"
            android:text="更新内容"/>

        <TextView
            android:id="@+id/update_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:lineSpacingExtra="@dimen/space_3"
            android:layout_below="@+id/update_text1"
            android:layout_marginLeft="@dimen/space_25"
            android:layout_marginRight="@dimen/space_25"
            android:layout_marginTop="@dimen/space_8"
            android:textSize="@dimen/text_size_16"
            android:text="你好，我是哈哈" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                />

            <TextView
                android:id="@+id/cancle"
                android:layout_width="40dp"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                 />

        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>