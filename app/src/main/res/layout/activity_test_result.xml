<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite">
    <include layout="@layout/layout_main_header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/space_60"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_tonguolv"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="@drawable/bg_tongguolv"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/space_35"
            android:textSize="@dimen/space_16"
            android:textColor="@color/black"
            android:text="0%"/>
        <TextView
            android:id="@+id/tv_haoshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_30"
            android:textSize="@dimen/space_16"
            android:textColor="@color/black"
            android:text="测试耗时 0 分钟"/>
    </LinearLayout>
    <GridView
        android:id="@+id/gv_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:layout_above="@+id/ll_btns"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="@dimen/space_20"
        android:scrollbars="none"
        android:paddingTop="@dimen/space_20"
        android:paddingBottom="@dimen/space_20"
        android:columnWidth="@dimen/space_40"
        android:background="@color/white"
        android:numColumns="5"/>
    <LinearLayout
        android:id="@+id/ll_btns"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:paddingTop="@dimen/space_16"
        android:paddingBottom="@dimen/space_16">
        <com.iyangcong.reader.ui.button.FlatButton
            android:id="@+id/btn_retest"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/space_40"
            android:text="再次测试"
            android:textColor="@color/white"
            app:shadowEnabled="false" />
        <com.iyangcong.reader.ui.button.FlatButton
            android:id="@+id/btn_backbook"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/space_40"
            android:layout_marginLeft="@dimen/space_20"
            android:text="返回图书"
            android:textColor="@color/white"
            app:shadowEnabled="false" />
    </LinearLayout>
</RelativeLayout>