<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5.5dp"
    android:paddingTop="5.5dp"
    android:paddingLeft="@dimen/space_15"
    android:paddingRight="@dimen/space_15">

        <com.iyangcong.reader.ui.ListItemDelete
            android:layout_width="match_parent"
            android:layout_height="47.0dip"
            android:orientation="horizontal"
            android:background="@drawable/reciteword_item_shape_corner">
            <LinearLayout
                android:id="@+id/front"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="word" />

                <TextView
                    android:id="@+id/word_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="/word/" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/collect"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/reciteword_item_collect_bg"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dip"
                    android:textColor="@android:color/white"
                    android:text="复习"/>

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/reciteword_item_delete_bg"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="删除"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </com.iyangcong.reader.ui.ListItemDelete>

</LinearLayout>