<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/search_bar_height"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <com.iyangcong.reader.ui.ClearEditText
            android:id="@+id/ceSearch"
            android:layout_width="@dimen/space_0"
            android:layout_height="@dimen/space_28"

            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginRight="@dimen/space_0"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/bg_search"
            android:backgroundTint="@color/click_bg"
            android:cursorVisible="true"
            android:drawableLeft="@drawable/searchb"
            android:drawablePadding="@dimen/space_5"
            android:drawableRight="@drawable/close"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="请输入作者或书名"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_5"
            android:singleLine="true"
            android:textColor="@color/dark"
            android:textColorHint="@color/text_color_lightgray"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@+id/tv_search"
            style="@style/text_large"
            android:layout_marginRight= "@dimen/space_5"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="@dimen/space_5"
            android:gravity="center_horizontal|center_vertical"
            android:padding="10dip"
            android:text="搜索"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>
</LinearLayout>