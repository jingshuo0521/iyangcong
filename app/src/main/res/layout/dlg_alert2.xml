<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alertdlg_bg"
    tools:ignore="RtlHardcoded,ContentDescription" >

    <TextView
        android:id="@+id/dlg_tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:textColor="@color/dlg_title"
        android:textSize="@dimen/text_size_20" />

    <ImageView
        android:id="@+id/im_diliver2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dlg_tv_title2"
        android:layout_marginTop="10dip"
        android:src="@drawable/alertdlg_diviler" />

    <TextView
        android:id="@+id/dlg_tv_message2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_btn2"
        android:layout_below="@id/im_diliver2"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center_vertical"
        android:textColor="@color/dlg_text"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:id="@+id/layout_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dlg_btn_postive2"
            android:layout_width="0dip"
            android:layout_height="45dip"
            android:layout_weight="1"
            android:background="@drawable/alertdlg_btn_selecter"
            android:textColor="@color/dlg_text"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

</RelativeLayout>