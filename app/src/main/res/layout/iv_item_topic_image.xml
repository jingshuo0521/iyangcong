<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_topic_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/market_book_topic_height"
        android:adjustViewBounds="true"
        android:padding="@dimen/space_8"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/iv_topic_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/market_banner_height"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_special_title"
        style="@style/text_middle_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:paddingLeft="@dimen/space_8"
        android:paddingRight="@dimen/space_8"
        android:visibility="gone" />
</LinearLayout>