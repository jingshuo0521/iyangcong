<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/space_5"
        android:layout_marginBottom="@dimen/space_5"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/civ_topic_head_img"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_10"
            android:src="@drawable/ic_head_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_toRightOf="@+id/civ_topic_head_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_topic_title"
                style="@style/text_middle_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中山大学3年2班" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/space_15"
                    android:layout_height="@dimen/space_15"
                    android:src="@drawable/ic_circle_member" />

                <TextView
                    style="@style/text_middle"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:text="成员：" />

                <TextView
                    android:id="@+id/tv_topic_member"
                    style="@style/text_middle"
                    android:layout_width="wrap_content"
                    android:text="57" />

                <ImageView
                    android:layout_width="@dimen/space_15"
                    android:layout_height="@dimen/space_15"
                    android:layout_marginLeft="@dimen/space_30"
                    android:src="@drawable/ic_circle_topic" />

                <TextView
                    style="@style/text_middle"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:text="话题：" />

                <TextView
                    android:id="@+id/tv_topic_num"
                    style="@style/text_middle"
                    android:layout_width="wrap_content"
                    android:text="205" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>