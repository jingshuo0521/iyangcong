<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/graywhite"
        android:layout_alignParentTop="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_chapter_test"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true">
        <ImageButton
            android:id="@+id/btnBack"
            style="@style/title_base_button"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_back"/>
        <ImageView
            android:id="@+id/iv_clock"
            android:src="@drawable/ic_shizhong1"
            android:layout_toRightOf="@+id/btnBack"
            android:layout_alignParentBottom="true"
            style="@style/title_base_button"
            />
        <TextView
            android:id="@+id/tv_test_time"
            style="@style/text_tittle"
            android:layout_toRightOf="@+id/iv_clock"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxWidth="180dp"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/space_8"
            android:textSize="@dimen/text_size_14"
            android:text="00:00:00"/>
        <TextView
            android:id="@+id/tv_timu"
            style="@style/text_tittle"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            tools:text="题目2/5"
            android:gravity="center"
            android:maxWidth="180dp"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/space_8"
            />
        <ImageView
            android:id="@+id/iv_datika"
            android:src="@drawable/ic_datiqia1"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            style="@style/title_base_button"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginLeft="@dimen/space_26"
        android:layout_marginRight="@dimen/space_26"
        android:layout_marginTop="84dp"
        android:background="@drawable/bg_test_card"
        />
    <com.iyangcong.reader.ui.swipecardview.SwipeFlingAdapterView2
        android:id="@+id/sv_card_list"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/space_100"
        android:layout_marginBottom="@dimen/space_50"
        android:layout_height="match_parent"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graywhite"
        android:layout_above="@id/ll_btns"/>
    <LinearLayout
        android:id="@+id/ll_btns"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <Button
            android:id="@+id/btn_pre_question"
            android:layout_width="@dimen/afc_10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="上一题"
            android:textColor="@color/black1"
            android:gravity="center"
            android:textSize="@dimen/text_size_16"
            android:background="@drawable/bg_test_btn"/>
        <View
            android:layout_width="@dimen/space_1"
            android:layout_height="@dimen/space_30"
            android:background="@color/graywhite"
            android:layout_gravity="center_vertical"/>
        <Button
            android:id="@+id/btn_next_question"
            android:layout_width="@dimen/afc_10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="下一题"
            android:textColor="@color/black1"
            android:gravity="center"
            android:textSize="@dimen/text_size_16"
            android:background="@drawable/bg_test_btn"/>
    </LinearLayout>
</RelativeLayout>