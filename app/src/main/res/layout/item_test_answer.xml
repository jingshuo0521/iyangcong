<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/space_16"
    android:paddingLeft="@dimen/space_16"
    android:paddingTop="@dimen/space_12"
    android:paddingBottom="@dimen/space_12"
    android:gravity="center|left"
    android:id="@+id/ll_answer">
    <TextView
        android:id="@+id/tv_answer_id"
        android:layout_width="@dimen/space_27"
        android:layout_height="@dimen/space_27"
        android:lineSpacingExtra="@dimen/space_8"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14"
        android:gravity="center"
        android:background="@drawable/bg_item_answer"
        android:layout_marginRight="@dimen/space_16"
        tool:text="A"
        />
    <TextView
        android:id="@+id/tv_answer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/space_8"
        android:textColor="@color/black1"
        android:textSize="@dimen/text_size_14"
        tool:text="accross"
        android:visibility="visible"
        />
    <ImageView
        android:id="@+id/iv_answer_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_80"
        android:scaleType="fitStart"
        tool:src="@drawable/img_analysis"
        android:visibility="gone"/>
</LinearLayout>