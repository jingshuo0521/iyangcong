<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue"></solid>
            <corners android:radius="@dimen/space_6"></corners>
            <padding android:bottom="@dimen/space_3"
                android:top="@dimen/space_3"
                android:left="@dimen/space_30"
                android:right="@dimen/space_30"></padding>

        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue2"></solid>
            <corners android:radius="@dimen/space_6"></corners>
            <padding android:bottom="@dimen/space_3"
                android:top="@dimen/space_3"
                android:left="@dimen/space_30"
                android:right="@dimen/space_30"></padding>

        </shape>
    </item>

</selector>