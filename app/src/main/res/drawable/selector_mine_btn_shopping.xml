<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_color"></solid>
            <corners android:radius="@dimen/space_5"></corners>
            <padding android:bottom="@dimen/space_4"
                android:left="@dimen/space_30"
                android:right="@dimen/space_30"
                android:top="@dimen/space_4"></padding>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange"></solid>
            <corners android:radius="@dimen/space_5"></corners>
            <padding android:bottom="@dimen/space_4"
                android:left="@dimen/space_30"
                android:right="@dimen/space_30"
                android:top="@dimen/space_4"></padding>
        </shape>
    </item>

</selector>
