<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background" android:drawable="@drawable/progressbar_background">
        <shape>
            <corners android:radius="2.5dip" />
            <gradient
                android:angle="270"
                android:centerY="0.5"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress"  android:drawable="@drawable/progressbar_background">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient
                    android:angle="270"
                    android:centerY="0.5"
                    android:endColor="#165CBC"
                    android:startColor="#85B0E9" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress"  >
        <clip>
            <shape>
                <corners android:radius="2.5dip" />
                <gradient
                    android:angle="270"
                    android:centerY="0.5"
                    android:endColor="@color/main_color"
                    android:startColor="@color/main_color" />
            </shape>
        </clip>
    </item>

</layer-list>