<?xml version="1.0" encoding="utf-8"?>
<!-- 不带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="#ff9b9b9b" />
            <stroke
                android:width="1dp"
                android:color="#FFEE4D22" />
        </shape>
    </item>
    <item
        android:top="1dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="#ff9b9b9b" />
            <stroke
                android:width="1dp"
                android:color="#ff9b9b9b" />
        </shape>
    </item>
</layer-list>